<?xml version="1.0" ?>

<Problem>
  <Solvers>
    <CompositionalMultiphaseReservoir
      name="reservoirSystem"
      flowSolverName="compositionalMultiphaseFlow"
      wellSolverName="compositionalMultiphaseWell"
      logLevel="1"
      initialDt="1e2"
      targetRegions="{ Region1, wellRegion1, wellRegion2, wellRegion3 }">
      <NonlinearSolverParameters
        newtonTol="1e-8"  
        newtonMaxIter="40"/>
      <LinearSolverParameters
        solverType="direct"
        directParallel="0"
        logLevel="0"/>
    </CompositionalMultiphaseReservoir>

    <CompositionalMultiphaseFVM
      name="compositionalMultiphaseFlow"
      logLevel="1"
      discretization="fluidTPFA"
      targetRegions="{ Region1 }"
      fluidNames="{ fluid1 }"
      solidNames="{ rock }"
      relPermNames="{ relperm }"
      temperature="297.15"
      maxCompFractionChange="0.1"
      useMass="1"/>

    <CompositionalMultiphaseWell
      name="compositionalMultiphaseWell"
      logLevel="1"
      targetRegions="{ wellRegion1, wellRegion2, wellRegion3 }"
      fluidNames="{ fluid1 }"
      relPermNames="{ relperm }"
      wellTemperature="297.15"
      maxCompFractionChange="0.1"
      useMass="1">
      <WellControls
        name="wellControls1"
        type="producer"
        referenceElevation="1.2"
        control="oilVolRate"
        targetBHP="1e6"
        targetRate="1e-8"
        targetOilRate="1e-8"/>
      <WellControls
        name="wellControls2"
        type="producer"
        referenceElevation="1.2"
        control="oilVolRate"
        targetBHP="1e6"
        targetRate="1e-8"
        targetOilRate="1e-8"/>
      <WellControls
        name="wellControls3"
        type="injector"
        referenceElevation="1.2"
        control="totalVolRate"
        targetBHP="1e7"
        targetRate="1e-5"
        targetOilRate="1e-5"
        injectionStream="{ 0.05, 0.95 }"/>
    </CompositionalMultiphaseWell>
  </Solvers>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 15 }"
      yCoords="{ 0, 15 }"
      zCoords="{ 0, 1 }"
      nx="{ 20 }"
      ny="{ 20 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>

    <InternalWell
      name="well_producer1"
      wellRegionName="wellRegion1"
      wellControlsName="wellControls1"
      meshName="mesh1"
      polylineNodeCoords="{ { 14.5, 0.5, 1.2 },
                            { 14.5, 0.5, 0.2 } }"
      polylineSegmentConn="{ { 0, 1 } }"
      radius="0.1"
      numElementsPerSegment="2">
      <Perforation
        name="producer1_perf1"
        distanceFromHead="0.99"/>
    </InternalWell>

    <InternalWell
      name="well_producer2"
      wellRegionName="wellRegion2"
      wellControlsName="wellControls2"
      meshName="mesh1"
      polylineNodeCoords="{ { 14.5, 14.5, 1.2 },
                            { 14.5, 14.5, 0.2 } }"
      polylineSegmentConn="{ { 0, 1 } }"
      radius="0.1"
      numElementsPerSegment="2">
      <Perforation
        name="producer2_perf1"
        distanceFromHead="0.99"/>
    </InternalWell>
    <InternalWell
      name="well_injector1"
      wellRegionName="wellRegion3"
      wellControlsName="wellControls3"
      meshName="mesh1"
      polylineNodeCoords="{ { 0.5, 7.5, 1.2 },
                            { 0.5, 7.5, 0.2 } }"
      polylineSegmentConn="{ { 0, 1 } }"
      radius="0.1"
      numElementsPerSegment="2">
      <Perforation
        name="injector1_perf1"
        distanceFromHead="0.99"/>
    </InternalWell>
  </Mesh>

  <Events
    maxTime="5e5">
    <PeriodicEvent
      name="solverApplications"
      forceDt="5e3"
      target="/Solvers/reservoirSystem"/>

    <PeriodicEvent
      name="outputs"
      timeFrequency="5e4"
      targetExactTimestep="1"
      target="/Outputs/siloOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="2.5e5"
      targetExactTimestep="0"
      target="/Outputs/restartOutput"/>
  </Events>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation
        name="fluidTPFA"
        fieldName="pressure"
        coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="Region1"
      cellBlocks="{ cb1 }"
      materialList="{ fluid1, rock, relperm }"/>

    <WellElementRegion
      name="wellRegion1"
      materialList="{ fluid1, relperm }"/>

    <WellElementRegion
      name="wellRegion2"
      materialList="{ fluid1, relperm }"/>

    <WellElementRegion
      name="wellRegion3"
      materialList="{ fluid1, relperm }"/>
  </ElementRegions>

  <Constitutive>
    <BlackOilFluid
      name="fluid1"
      fluidType="DeadOil"
      phaseNames="{ oil, water }"
      surfaceDensities="{ 800.0, 1022.0 }"
      componentMolarWeight="{ 114e-3, 18e-3 }"
      tableFiles="{ pvdo.txt, pvtw.txt }"/>

    <PoreVolumeCompressibleSolid
      name="rock"
      referencePressure="5e9"
      compressibility="1e-11"/>

    <BrooksCoreyRelativePermeability
      name="relperm"
      phaseNames="{ oil, water }"
      phaseMinVolumeFraction="{ 0.0, 0.0 }"
      phaseRelPermExponent="{ 2.0, 1.5 }"
      phaseRelPermMaxValue="{ 0.8, 0.9 }"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification
      name="permx"
      component="0"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="permeability"
      scale="2.0e-13"/>

    <FieldSpecification
      name="permy"
      component="1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="permeability"
      scale="2.0e-13"/>

    <FieldSpecification
      name="permz"
      component="2"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="permeability"
      scale="2.0e-13"/>

    <FieldSpecification
      name="referencePorosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="referencePorosity"
      scale="0.05"/>

    <!-- Initial pressure: ~5 bar -->
    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="pressure"
      scale="5e6"/>

    <!-- Initial composition: no water, only heavy hydrocarbon components and N2 -->
    <FieldSpecification
      name="initialComposition_oil"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="globalCompFraction"
      component="0"
      scale="0.9"/>

    <FieldSpecification
      name="initialComposition_water"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="globalCompFraction"
      component="1"
      scale="0.1"/>
  </FieldSpecifications>

  <Functions/>

  <Outputs>
    <Silo
      name="siloOutput"/>

    <Restart
      name="restartOutput"/>
  </Outputs>
</Problem>
